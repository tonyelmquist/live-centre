.click-indicator-pop {
    left: 0;
    top: 0;
    position: absolute;
    display: block;
    width: 25px;
    height: 25px;
    border-radius: 50%;
    background: rgba(243, 156, 18, .9);
    z-index: -1;
    cursor: pointer;
    box-shadow: 0 0 0 rgba(243, 156, 18, .9);
    animation: pulse-orange 2s infinite;
}
.click-indicator-pop:hover {
    animation: none;
}

.click-indicator-text {
    left: 78px;
    top: 0;
    position: absolute;
    display: block;
    width: 22px;
    height: 12px;
    border-radius: 50%;
    background: transparent;
    z-index: -1;
    cursor: pointer;
    box-shadow: 0 0 0 rgba(255, 255, 255, .9);
    animation: pulse 2s infinite;
}
.click-indicator-text:hover {
    animation: none;
}

.click-indicator-shirt {
    left: 50%;
    top: 45%;
    transform: translate(-50%, -50%);
    position: absolute;
    display: block;
    width: 70%;
    height: 70%;
    border-radius: 50%;
    background: transparent;
    z-index: -1;
    cursor: pointer;
    box-shadow: 0 0 0 rgba(255, 255, 255, .9);
    animation: pulse 2s infinite;
}
.click-indicator-shirt:hover {
    animation: none;
}

@-webkit-keyframes pulse-orange {
  0% {
    -webkit-box-shadow: 0 0 0 0 rgba(243, 156, 18, .9);
  }
  70% {
      -webkit-box-shadow: 0 0 0 15px rgba(243, 156, 18, 0);
  }
  100% {
      -webkit-box-shadow: 0 0 0 0 rgba(243, 156, 18, 0);
  }
}
@keyframes pulse-orange {
  0% {
    -moz-box-shadow: 0 0 0 0 rgba(243, 156, 18, .9);
    box-shadow: 0 0 0 0 rgba(243, 156, 18, .9);
  }
  70% {
      -moz-box-shadow: 0 0 0 15px rgba(243, 156, 18, 0);
      box-shadow: 0 0 0 15px rgba(243, 156, 18, 0);
  }
  100% {
      -moz-box-shadow: 0 0 0 0 rgba(243, 156, 18, 0);
      box-shadow: 0 0 0 0 rgba(243, 156, 18, 0);
  }
}

@-webkit-keyframes pulse {
  0% {
    -webkit-box-shadow: 0 0 0 0 rgba(255, 255, 255, .9);
  }
  70% {
      -webkit-box-shadow: 0 0 0 15px rgba(255, 255, 255, 0);
  }
  100% {
      -webkit-box-shadow: 0 0 0 0 rgba(255, 255, 255, 0);
  }
}
@keyframes pulse {
  0% {
    -moz-box-shadow: 0 0 0 0 rgba(255, 255, 255, .9);
    box-shadow: 0 0 0 0 rgba(255, 255, 255, .9);
  }
  70% {
      -moz-box-shadow: 0 0 0 15px rgba(255, 255, 255, 0);
      box-shadow: 0 0 0 15px rgba(255, 255, 255, 0);
  }
  100% {
      -moz-box-shadow: 0 0 0 0 rgba(255, 255, 255, 0);
      box-shadow: 0 0 0 0 rgba(255, 255, 255, 0);
  }
}