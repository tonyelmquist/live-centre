.modal {
    position: fixed;
    z-index: 3000;
    width: 100%;
    height: 100%;
    top: 100%;
    left: 0;
    background: rgba(0, 0, 0, .3);
    display: flex;
    transition: .5s top;

    &.isOpen {
        top: 0;
    }

    .inner-modal {
        margin: auto;
        position: relative;
        padding: 20px;
        background: rgba(0, 0, 0, .8);
        width: 80%;
        height: 300px;
        h2, span {
            color: white;
        }

        span {
            position: absolute;
            right: 20px;
            top: 20px;
        }

        input {
            width: 100%;
            box-sizing: border-box;
            margin-bottom: 20px;
        }
    }
}