.basketball-overlay-home-name, .basketball-overlay-away-name {
    position: absolute;
    top: 15px;
    left: 20px;
    color: white;
    font-weight: bold;
    font-size: 21px;
    text-shadow: 2px 2px 2px rgba(0, 0, 0, .3);
}

.basketball-overlay-away-name {
    left: auto;
    right: 20px;
}

.basketball-overlay-home-roster, .basketball-overlay-away-roster {
    position: absolute;
    top: 40px;
    left: 20px;
    height: 100%;
    color: white;
    text-shadow: 2px 2px 2px rgba(0, 0, 0, .4);
    transform: translateX(-120%);
    transition: transform .5s;
    will-change: transform;

    ul {
        list-style: none;
        height: 70%;
        padding-left: 0;
        overflow: scroll;

        li {
            padding: 15px 20px;
            background: rgba(0, 0, 0, .4);
            &:nth-child(2n) {
                background: rgba(0, 0, 0, .5);
            }
        }
    }

    &.isShowing {
        transform: translateX(0%);
    }
}

.basketball-overlay-away-roster {
    left: auto;
    right: 20px;
    text-align: right;
    transform: translateX(120%);
}

.basketball-overlay-center {
    position: absolute;
    top: 20px;
    color: white;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    padding: 10px 15px;
    background: rgba(0, 0, 0, .4);

    .vs {
        padding: 0 20px;
    }

    .basketball-home, .basketball-away {
        font-weight: bold;
        font-size: 21px;
    }
}