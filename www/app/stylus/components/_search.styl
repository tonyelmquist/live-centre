@import '../constants/_variables.styl';
// SEARCH  
.searchInput input
  border-top: none
  border-left: none
  border-right: none
  font-size:$font_s
  padding: 5px
  border-bottom: 0;
  background-color:transparent

.searchInput input:active, .searchInput input:focus
  outline: none
  //border-bottom: solid 1px rgba(000, 000, 000, 0.5)
  color: #000

//For all search input fields
.searchInput
  border-bottom: solid 1px rgba(000, 000, 000, 0.2)
  input
    opacity: 1
//For mobile
.expandable_searchbar
  .logo
    position: absolute!important
    padding: 5px!important
    opacity: 0!important
    transform: translate(-100%, 0)
    transition: all 0.2s $cubic
    
  .searchInput
    display:block
    position: absolute
    margin:10px 5px 5px 20px
    opacity: 1
    width: 60%
    max-width: 250px
    opacity: 1
    transition: all 0.3s $cubic
    transform: translate(0, 0)
    input
      transition: all 0.3s $cubic
      

.expandable_searchbar.closed
  .logo
    opacity: 1!important
    transform: translate(0, 0)
  .searchInput
    width: 0%
    opacity: 0.3
    transform: translate(-10%, 0)
    input
      opacity:0
      

//Searchcontainer - Window that expands to show suggestions.
.searchContainer
  position:fixed
  width:100%
  right:0
  top:$top_offset
  bottom:$bottom_offset
  z-index: 999
  overflow:auto
  background-color:white
  transition: all 0.5s $cubic
  .containers
    margin: 14px 0 0 10px
.searchContainer.close
    bottom:100%

@media (min-width: $big_screen)
  .searchContainer
    top: $top_offset_desktop
    bottom: $bottom_offset_desktop

//just for the top filters
.filterContainer.horizontalScroll
  background-color: rgb(225, 245, 254)
  .items
    background-color: #fff
  .horizontalScrollInner
    margin: 20px

//all horizontal scroll
.horizontalScroll
  width:100%
  text-align:center
  overflow-y: scroll
  white-space: nowrap;
  .username
    margin:2px 0
    font-size:$font_s
    overflow:hidden
  .avatar
    margin: 0 10px
    white-space: nowrap;
  .horizontalScrollInner
    margin: 0 20px
    white-space: nowrap;
  .items
    display:inline
    margin: 0 10px;
    padding: 10px
    background-color: rgb(225, 245, 254)
    border-radius: 10px
    .active
      background-color: #bce3ec

//Remove horizontal scrolling on desktop  >600px
//Change background color back to transparent.     
@media (min-width: 600px)
  .horizontalScroll
    overflow:auto
    background-color: transparent
    .horizontalScrollInner
      white-space:normal
      margin: 0
      padding: 0 2rem
      text-align:left
  .filterContainer.horizontalScroll
    background-color: transparent
    .items
      background-color: rgb(225, 245, 254)
      display:inline-block
      margin:10px
    .horizontalScrollInner
      margin: 0
      white-space:normal
 
//Overriding material ui raised button  
.filterButtons
  margin-right: 12px
  span
    text-transform: capitalize !important

.filterButtons.active
    button
      background-color: $color_ocean !important
    span
      color: #fff !important
    
@media (min-width: 600px)   
  .filterButtons
    margin: 12px 12px 3px 12px
    
.portraitAvatar
  text-align: center
  max-width:100px


