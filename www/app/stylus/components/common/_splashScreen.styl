.splash-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 99999;
    background: rgb(144, 202, 249);
    color: white;
    transition: .5s all;

    .welcome-text, .footer {
        width: 90%;
        left: 50%;
        top: 50%;
        position: absolute;
        transform: translate(-50%, -50%);
        text-align: center;
    }

    .title, .welcome {
        font-weight: 600;
        font-size: 24px;
    }

    .welcome {
        top: 40%;
        font-size: 21px;
        font-weight: normal;
    }

    .footer {
        font-size: 14px;
        top: 97%;
    }

    &.isHidden {
        opacity: 0;
        pointer-events: none;
    }
}