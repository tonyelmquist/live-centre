.chat-overlay {
    width: 33%;
    height: 100%;
    background: rgba(0, 0, 0, .3);
    color: white;
    position: relative;
    transition: .5s all;
    margin-left: -33%;

    &.open {
        margin-left: 0;
    }

    input {
        position: absolute;
        bottom: 5px;
        left: 5px;
    }
    button {
        position: absolute;
        bottom: 5px;
        right: 5px;
        color: white;
    }

    .chat-messages {
        position: absolute;
        bottom: 0;
        padding-bottom: 20px;
        list-style: none;
        padding-left: 5px;

        .chat-user {
            font-weight: bold;
            display: inline-block;
            padding-right: 8px;
        }
    }
}