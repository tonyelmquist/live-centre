@import '../constants/_variables.styl';

.product-card {
    position: relative;
	width: 100%;
    overflow: hidden;
    // min-height:400px;
    border-radius: 5px;
    // padding-top: 50px;
}
.keep-ratio {
    // padding-bottom: 56.25%; 16:9
    // padding-bottom: 33.33%;
}
.card-header {
    position:absolute;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.content {
    // border: 1px solid $color_ocean;
    // position: absolute;
    top: 0;  bottom: 0;  left: 0;  right: 0;
    padding-bottom: 10px;
    // padding-top: 48px;
}
.tab-header {
    width:100%;
    display: flex;
    justify-content: space-between;
}
.tab-controls {
    width:100%;
    display: flex;
    justify-content: center;
}

.tab-link {
    border: none;
    outline: none;
    cursor: pointer;
    padding: 14px 16px;
    background-color: Transparent;
    transition: background-color 1s;
    &.active {
        color: $color_void;
        border-bottom: 2px solid $color_starry;
    }
}
