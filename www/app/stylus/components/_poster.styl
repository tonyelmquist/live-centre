.poster {
  position: relative;
  width: 100%;
  height:100%;
}

.image {
  display: block;
  width: 100%;
  height: 100%;
}

.overlay {
  position: absolute;
  display: flex;
  top:0;
  left:0;
  background-color: rgba(255,255,255,0.2);
  overflow: hidden;
  height:100%;
  width: 100%;
  z-index: 2;

}

.overlay-content {
  white-space: nowrap;
  color: white;
  font-size: 20px;
  overflow: hidden;
  margin: auto;
}
