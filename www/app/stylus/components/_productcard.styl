@import '../constants/_variables.styl';

.product-card {
    position: relative;
	width: 100%;
    overflow: hidden;
    padding-top: 50px;
}
.sixteen-by-nine{
    padding-bottom: 56.25%;
}

.content {
    position: absolute;
    top: 0;  bottom: 0;  left: 0;  right: 0;
    padding: 0 5px;
}
.tab-header {
    width:100%;
    display: flex;
    justify-content: space-between;
}
.tab-controls {
    width:100%;
    display: flex;
    justify-content: center;
}

.tab-link {
    border: none;
    outline: none;
    cursor: pointer;
    padding: 14px 16px;
    background-color: Transparent;
    transition: background-color 1s;
    &.active {
        color: $color_void;
        border-bottom: 2px solid $color_starry;
    }
}
