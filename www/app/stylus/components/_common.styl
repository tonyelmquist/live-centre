.white
	color:white
.black
	color:black

.videoThumb {
	position: relative;
	.liveOverlay, .newOverlay {
		position: absolute;
		z-index: 500;
		bottom: 10px;
		right: 10px;
		background: #e74c3c;
		padding: 5px 10px;
		font-size: 14px;
		text-shadow:2px 2px 2px rgba(0, 0, 0, .2);

		p {
			padding: 0;
			margin: 0;
		}
	}

	.newOverlay {
		background: #3498db;
	}
}