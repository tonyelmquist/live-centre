// SEARCH  
.searchInput input
  border-top: none
  border-left: none
  border-right: none
  font-size:14px
  padding: 5px
  border-bottom: 0;

.searchInput input:active, .searchInput input:focus
  outline: none
  //border-bottom: solid 1px rgba(000, 000, 000, 0.5)
  color: #000

.mobile_searchbar
  .logo
    position: absolute!important
    padding: 5px!important
    opacity: 0!important
    transform: translate(-100%, 0)
    transition: all 0.2s $cubic
    *
      font-size:24px!important
      font-weight: bold
      color: $color_ocean
      
  .searchInput
    display:blockx
    position: absolute
    margin:10px 5px 5px 20px
    opacity: 1
    border-bottom: solid 1px rgba(000, 000, 000, 0.2)
    width: 60%
    max-width: 250px
    opacity: 1
    transition: all 0.3s $cubic
    transform: translate(0, 0)
    input
      transition: all 0.3s $cubic
      opacity: 1

.mobile_searchbar.closed
  .logo
    opacity: 1!important
    transform: translate(0, 0)
  .searchInput
    width: 0%
    opacity: 0.3
    transform: translate(-10%, 0)
    input
      opacity:0
      

//Searchcontainer - Window that expands to show suggestions.
.searchContainer
  position:fixed
  width:100%
  right:0
  top:48px
  bottom:72px
  z-index: 999
  overflow:auto
  background-color:white
  transition: all 0.5s $cubic
  .containers
    margin: 14px 0 0 10px
.searchContainer.close
    bottom:100%
    
//just for the top filters
.horizontalScroll.filters
  background-color: rgb(225, 245, 254)
  .items
    background-color: #fff
  .horizontalScrollInner
    margin: 20px

//all horizontal scroll
.horizontalScroll
  width:100%
  text-align:center
  overflow-y: scroll
  white-space: nowrap;
  .username
    margin:2px 0
    font-size:14px
  .avatar
    margin: 0 10px
    white-space: nowrap;
  .horizontalScrollInner
    margin: 0 20px
    white-space: nowrap;
  .items
    display:inline
    margin: 0 10px;
    padding: 10px
    background-color: rgb(225, 245, 254)
    border-radius: 10px
    .active
      background-color: #bce3ec
