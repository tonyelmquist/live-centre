@import '../constants/_variables.styl'

.fs-overlay {
    position: absolute /* Sit on top of the page content */
    width: 100% /* Full width (cover the whole page) */
    top:0
    left: 0
    background-color: black
    z-index: 100 /* Specify a stack order in case you're using a different order for other elements*/
    display: none;



    &.isOpen {
        display: block;
    }
    .overlay-header {
        // margin-top: 48px
		margin-bottom: 8px;
        display:flex
        justify-content: space-between
    }
}

.timeline-overlay
    position: absolute
    bottom: 90px
    width: 100%

.timeline-overlay .tick {
    width: 0; 
    height: 0; 
    border-left: 6px solid transparent;
    border-right: 6px solid transparent;  
    border-top: 6px solid white;
    position: absolute
}

.timeline-overlay .tick.highlighted {
    border-top: 6px solid rgb(204,169,44);
}

.timeline-overlay .tick.highlighted:hover {
    animation: none;
}

