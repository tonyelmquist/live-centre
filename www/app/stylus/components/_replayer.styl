@keyframes card-show {
    0% {
        opacity: 0;
        right: 10px
    }
    3% {
        opacity: 1;
        right: 20px
    }
    97% {
        opacity: 1;
        right: 20px
    }
    100% {
        opacity: 0;
        right: 10px
    }
}

.replayer {
    width: 320px;
    height: 180px;
    //border-radius: 5px;
    border: 1px solid rgba(250, 250, 250, 0.5);
    background: transparent;
    display: flex;
    position: absolute;
    bottom: 30px;
    right: 20px;
    z-index: 3000;
    &.open {
        animation: card-show 12s forwards;
    }
}

