.progressBar
    .time
        font-family: verdana;
        position: fixed;
        bottom: 12px;
        left: 65px;
        font-size:9px
        color:white
        &.right
            right: 10px
            left:auto
    .bar
        position: fixed;
        bottom: 8px;
.small-control
    position: fixed
    top: auto
    right: auto
    font-size: 17px
    padding:10px
    color: #f7f2f2
    &.bottom
        bottom: 0
    &:active, &:hover
        color: #fff

.video-player
    display:block
    vertical-align: top
    box-sizing: border-box;
    color: #fff;
    background-color: #000;
    position:relative;
    line-height:1;
    width: 100%;
    height:100%;