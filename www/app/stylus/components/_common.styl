.inline
	display:inline-block
.floatLeft
	float:left
.floatRight
	float:right
.paddingRight
	padding-right: 40px
.paddingLeft
	padding-left: 40px
.hidden
	display:none
.visible
	display:visible
	
//Simple way to hide stuff on mobile or tablet; use hideOnTablet, hideOnMobile
@media (max-width: $medium_screen)
	.hideOnMobile
		display:none
		
@media (max-width: $big_screen)
	.hideOnTablet
		display:none

