.player-info-overlay {
    position: absolute;
    width: 70%;
    height: 120px;
    top: 52%;
    left: 50%;
    transition: .5s all;
    transform: translate(-50%, -50%) scale(0);
    opacity: 0;

    &.isShowing {
        transform: translate(-50%, -50%) scale(1);
        opacity: 1;
    }

    &.isModalOpen {
        top: 42%;
        .player-modal {
            opacity: 1;
        }
    }

    .player-icon {
        background: rgba(2, 12, 28, .7);
        transform: skew(-10deg);
        border-right: 8px solid white;
        position: absolute;
        left: 0;
        top: 0;
        width: 25%;
        height: 100%;
        overflow:hidden;

        img {
            transform: skew(10deg) translateX(-50%) scale(1.3);
            position: absolute;
            left: 50%;
            height: 100%;
            width: 100%;
            object-position: top;
            object-fit: cover;
        }
    }
    
    .player-info {
        background: rgba(2, 12, 28, .7);
        transform: skew(-10deg);
        position: absolute;
        right: 0;
        top: 0;
        width: 71%;
        height: 100%;
        color: white;
        padding: 20px 25px;
        box-sizing: border-box;

        .player-info-name, .player-info-team, .player-info-position {
            display: inline-block;
            width: 100%;
            font-weight: bold;
            padding-bottom: 10px;
            font-size: 18px;
        }
        .player-info-name {
            padding-bottom: 6px;
        }

        .player-info-team, .player-info-position  {
            font-weight: normal;
            font-size: 16px;
            padding-bottom: 2px;
        }

        .player-info-number {
            position: absolute;
            top: 48px;
            right: 13px;
            font-size:32px;
            font-weight: bold;
        }
    }

    .close-btn, .right-btn {
        background: rgba(2, 12, 28, .7);
        transform: skew(-10deg);
        position: absolute;
        left: 17px;
        top: -40px;
        width: 30px;
        height: 30px;
        color: white;

        i {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
    }

    .right-btn {
        left: auto;
        top: auto;
        bottom: 0;
        right: -30px;
    }

    .player-modal {
        position: absolute;
        top: 100%;
        left: -25px;
        transform: skew(-10deg);
        width: 100%;
        margin-top: 10px;
        height: 150px;
        opacity: 0;
        transition: .5s all;
        color: white;
        padding: 20px 25px;
        box-sizing: border-box;

        .player-stats {
            background: rgba(2, 12, 28, .7);
            width: 34%;
            text-align: center;
            padding: 10px 0;
            font-size: 18px;
            font-weight: bold;

            &.player-matches_played {
                position: absolute;
                top: 0;
                left: 29%;
            }

            &.player-red_cards {
                background: rgba(237, 28, 36, .7);
                position: absolute;
                top: 56px;
                left: 29%;
            }

            &.player-goals_scored {
                position: absolute;
                top: 0;
                right: 0;
            }

            &.player-yellow_cards {
                background: rgba(247, 147, 30, .8);
                position: absolute;
                top: 56px;
                right: 0;
            }
        }
    }
}


.player-info-tabs {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 130px;
    height: 30px;
    display: flex;

    .player-info-tab {
        display: inline-block;
        flex-grow: 1;
        text-align: center;
        height: 100%;
        padding: 6px 0;
        box-sizing: border-box;

        &:nth-child(3) {
            background: rgba(255, 255, 255, .1);
        }
        &:nth-child(2) {
            background: rgba(255, 255, 255, .2);
        }
        &:nth-child(1) {
            background: rgba(255, 255, 255, .3);
        }
    }
}