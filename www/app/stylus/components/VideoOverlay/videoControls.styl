.progressBar
    .time
        font-family: verdana;
        position: fixed;
        bottom: 12px;
        left: 65px;
        font-size:9px
        color:white
        &.right
            right: 10px
            left:auto
    .bar
        position: fixed;
        bottom: 8px;
.small-control
    position: fixed
    top: auto
    right: auto
    font-size: 17px
    padding:10px
    color: #fff
    &.bottom
        bottom: 0
    &:active, &:hover
        color: rgb(195, 195, 195);

.video-player
    display:block
    vertical-align: top
    box-sizing: border-box;
    color: #fff;
    background-color: #000;
    position:relative;
    line-height:1;
    width: 100%;
    height:100%;

.video-controls
    opacity: 1
    transition: 0.3s ease all

.gradient-overlay
    opacity: 0.5
    z-index: 0

.isWaiting
    .video-controls
        opacity: 0.6
        .progressBar
            opacity:1

//Takes precedence over isWaiting
.video-control-overlay.hide
    .video-controls, .gradient-overlay
        opacity: 0