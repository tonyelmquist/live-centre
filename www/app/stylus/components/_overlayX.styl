.overlay-x-container {
    position: fixed;
    z-index: 1000;

    .ox-video-container {
        width: 100%;
        height: 30%;
        background: black;
        position: fixed;
        left: 0;  
        top: 0;
        touch-action: none;
        z-index: 1100;
    }

    .ox-content {
        position: fixed;
        width: 100%;
        height: 70%;
        padding: 20px 20px 0 20px;
        background: white;
        will-change: transform;
        top: 100%;
        left: 0;
        box-sizing: border-box;
        z-index: 1050;
    }
}