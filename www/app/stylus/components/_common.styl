.inline
	display:inline-block
.floatLeft
	float:left
.floatRight
	float:right
.paddingRight
	padding-right: 40px
.paddingLeft
	padding-left: 40px
.hidden
	display:none
.visible
	display:visible
.center
	text-align:center
//Simple way to hide stuff on mobile or tablet; use hideOnTablet, hideOnMobile
@media (max-width: $medium_screen)
	.hideOnMobile
		display:none
		
@media (max-width: $big_screen)
	.hideOnTablet
		display:none

.container-fluid
	margin: 0 20px
	padding-top:5px

//Animation
.fadeOut
	transition: .5s all;
	opacity: 0
.fadeIn
	transition: .5s all;
	opacity: 1
