.fidget-spinner-container {
    position: absolute;
    bottom: -130px;
    right: -130px;
    transition: .5s all;
    opacity: .3;
    transform: scale(0) rotate(180deg);

    &.isShowing  {
        transform: scale(1) rotate(0deg);
    }

    &.isOpen {
        opacity: .9;
    }

    .fidget-spinner-center {
        transform: scale(1);
        transform-origin: center;
        transition: .5s all;

        &.isOpen {
            transform: scale(.6);
        }
    }

    .fidger-spinner-touch-zone {
        transform: scale(0);
        &.isOpen {
            transform: scale(1);
        }
    }


    .fidget-spinner-links {
        transform-origin: center;

        &.isSliding {
            transition: 1s all;
        }
    }

    .fidget-spinner-link {
        transform: scale(0);
        transform-origin: center;
        transition: .5s all;

        &.isOpen {
            transform: scale(1);
        }
    }
}