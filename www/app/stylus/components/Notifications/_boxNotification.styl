.box-notification {
    position: fixed;
    z-index: 5000;
    right: 10px;
    top: 10px;
    background: #333;
    color: white;
    padding: 15px 20px;
    border-radius: 3px;
    opacity: .9;
    max-width: 200px;
    display: flex;
    box-shadow: 0px 0px 2px rgba(0, 0, 0, .4);
    justify-content: space-between;
    transform: translateX( 125%);
    transition: .6s all;

    .fa {
        width: 80px;
        margin: auto;
    }

    &:hover {
        opacity: 1;
    }

    &.isShowing {
        transform: translateX(0%);
    }

    &.success {
        background: #27ae60;
    }
    &.error {
        background: #c0392b;
    }
}