.video-splash
    // position: absolute;
    // right: 25px;
    // bottom: 20px;
    // width: 50%
    margin-top:10px;
    width:100%
    transform: skew(-10deg);
    background-color: rgba(0,0,0, 0.7);
    box-shadow: 2px 2px 20px 0px rgba(250,250,250,0.2);
    .splash-inner
        transform: skew(10deg);
        padding: 20px
        color: #fff

.prevSplash
    transform: translateY(-75px);
    //opacity: 0;
    transition: 0.3s all

.nextSplash
    transform: translateY(75px);
    //opacity: 0
    transition: 0.3s all