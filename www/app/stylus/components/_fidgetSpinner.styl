.fidget-spinner-container {
    position: absolute;
    bottom: -120px;
    right: -120px;

    &.isOpen  {

    }

    .fidget-spinner-center {
        transform: scale(1);
        transform-origin: center;
        transition: .5s all;

        &.isOpen {
            transform: scale(.6);
        }
    }


    .fidget-spinner-links {
        transform-origin: center;

        &.isSliding {
            transition: 1s all;
        }
    }

    .fidget-spinner-link {
        transform: scale(0);
        transform-origin: center;
        transition: .5s all;

        &.isOpen {
            transform: scale(1);
        }
    }
}